@page "/receive/create"
@using Commons.Models.Receive
@using MyShopSystem_UI.Service
@inject IReceiveService receiveService;
@inject NavigationManager navigation

<div class="card p-3 mt-3">
	<h4>Create Product</h4>
	<div class="form-group">
		<label for="name">Name Product</label>
		<input id="name" class="form-control" @bind="newReceive.ProductName"/>
	</div>
	<div class="form-group">
		<label for="amount">Amount</label>
		<input id="amount" class="form-control" @bind="newReceive.Amount"/>
	</div>
	<div class="form-group">
		<label for="price">Price</label>
		<input id="price" class="form-control" @bind="newReceive.Price"/>
	</div>
	<div class="form-group">
		<label for="suplier">Suplier</label>
		<input id="suplier" class="form-control" @bind="newReceive.Supplier"/>
	</div>
	<div class="form-group">
		<label for="date">Date</label>
		<input id="date" class="form-control" @bind="newReceive.ReceivedDate"/>
	</div>

	<div class="mt-3">
		<button class="btn btn-success" @onclick="CreateReceive">Create Product</button>
		<a class="btn btn-secondary" href="/receive">Cancel</a>
	</div>
</div>


@code {
	private CreateReceiveDTO newReceive = new CreateReceiveDTO();

	protected override async Task OnInitializedAsync()
	{

	}
	private async Task CreateReceive()
	{
		var result = await receiveService.CreateReceive(newReceive);
		navigation.NavigateTo("/receive");
	}
}
