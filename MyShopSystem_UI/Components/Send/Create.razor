@page "/send/create"
@using Commons.Models.Send
@using MyShopSystem_UI.Service

@inject ISendService sendService;
@inject NavigationManager navigation

<div class="card p-3 mt-3">
	<h4>Create Product</h4>
	@* <div class="form-group">
		<label for="name">Name Product</label>
		<input id="name" class="form-control" @bind="newSend.ProductName" />
	</div> *@
	<div class="form-group">
		<label for="amount">Amount</label>
		<input id="amount" class="form-control" @bind="newSend.Amount"/>
	</div>
	<div class="form-group">
		<label for="phoneNumber">Price</label>
		<input id="phoneNumber" class="form-control" @bind="newSend.PhoneNumber"/>
	</div>
	<div class="form-group">
		<label for="type">Type</label>
		<input id="type" class="form-control" @bind="newSend.Type"/>
	</div>

	<div class="mt-3">
		<button class="btn btn-success" @onclick="CreateSend">Create Product</button>
		<a class="btn btn-secondary" href="/send">Cancel</a>
	</div>
</div>


@code {
	private CreateSendDTO newSend = new CreateSendDTO();

	protected override async Task OnInitializedAsync()
	{

	}
	private async Task CreateSend()
	{
		var result = await sendService.CreateSend(newSend);
		navigation.NavigateTo("/send");
	}
}

