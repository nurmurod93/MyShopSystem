@page "/delivery/create"
@using Commons.Models.DeliveryDTO
@using MyShopSystem_UI.Service
@inject IDeliveryServise deliveryService;
@inject NavigationManager navigation

<div class="card p-3 mt-3">
	<h4>Create Delivery</h4>
	<div class="form-group">
		<label for="warehouseId">WarehouseId</label>
		<input id="warehouseId" class="form-control" @bind="newDelivery.WarehouseId" />
	</div>
	<div class="form-group">
		<label for="storeId">StoreId</label>
		<input id="storeId" class="form-control" @bind="newDelivery.StoreId" />
	</div>
	<div class="mt-3">
		<button class="btn btn-success" @onclick="CreateDelivery">Save</button>
		<a class="btn btn-secondary" href="/delivery">Cancel</a>
	</div>
</div>


@code {
	private CreateDeliveryDTO newDelivery = new CreateDeliveryDTO();

	protected override async Task OnInitializedAsync()
	{

	}
	private async Task CreateDelivery()
	{
		var result = await deliveryService.CreateDelivery(newDelivery);
		navigation.NavigateTo("/delivery");
	}
}
